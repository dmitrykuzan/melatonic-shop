<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiperBeforeAfter = new Swiper('.before-after-slider__swiper', {
      spaceBetween: 8,
      slidesPerView: 1.2,
      autoHeight: true,

      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },

      breakpoints: {
        767: {
          spaceBetween: 10,
          slidesPerView: 2,
          autoHeight: true,
        },

        992: {
          spaceBetween: 20,
          slidesPerView: 3,
          centeredSlides: true,
          loop: true,
          autoHeight: true,
        },
