      autoHeight: true,

      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },

      breakpoints: {
        767: {
          spaceBetween: 10,
          slidesPerView: 2,
          autoHeight: true,
        },

        992: {
          spaceBetween: 20,
          slidesPerView: 3,
          centeredSlides: true,
          loop: true,
          autoHeight: true,
        },
      },
    });
  });
